<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView style="@style/ScrollViewBodyVertical">

        <LinearLayout style="@style/LinearScrollVerticalBody.EditText">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="80dp"
                android:layout_marginBottom="20dp"
                android:contentDescription="@string/rizki"
                android:src="@drawable/covid" />

            <androidx.cardview.widget.CardView
                style="@style/BodyTextView"
                android:layout_marginStart="@dimen/margin_edit_text_login"
                android:layout_marginEnd="@dimen/margin_edit_text_login"
                android:layout_marginBottom="@dimen/margin_top_bottom_body_edit_text_login">

                <EditText
                    android:id="@+id/edt_username"
                    style="@style/EditTextStyle"
                    android:hint="@string/username"
                    android:importantForAutofill="no"
                    android:inputType="text" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/BodyTextView"
                android:layout_marginStart="@dimen/margin_edit_text_login"
                android:layout_marginTop="@dimen/margin_top_bottom_body_edit_text_login"
                android:layout_marginEnd="@dimen/margin_edit_text_login"
                android:layout_marginBottom="@dimen/margin_top_bottom_body_edit_text_login">

                <EditText
                    android:id="@+id/edt_password"
                    style="@style/EditTextStyle"
                    android:hint="@string/password"
                    android:importantForAutofill="no"
                    android:inputType="textPassword" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_login"
                style="@style/BodyTextViewBottom"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/margin_start_end_bottom_button_login"
                android:layout_marginEnd="@dimen/margin_start_end_bottom_button_login"
                android:layout_marginBottom="@dimen/margin_start_end_bottom_button_login">
                <TextView
                    style="@style/BodyTvTextStyle.Button"
                    android:layout_width="wrap_content"
                    android:paddingStart="@dimen/padding_start_end_text_button_login"
                    android:paddingEnd="@dimen/padding_start_end_text_button_login"
                    android:text="@string/login"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>